@using MobileSellingProject.Model
@{ 
    List<CartItems> items = (List<CartItems>)Session[WebUtil.cart];
}
<table class="table-bordered">
    <thead>
        <tr>
            <td class="col-lg-2">
                Image
            </td>
            <td class="col-lg-3">
                name
            </td>
            <td class="col-lg-2">
                price
            </td>
            <td class="col-lg-2">
                Quantity
            </td>
            <td class="col-lg-3">
                Actions
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
        <tr>
            <td class="col-lg-2">
                <img style="width:50px;height:50px" src="@Url.Content(item.Products.Images.ToArray()[0].Url)" />
            </td>
            <td class="col-lg-3">
               @item.Products.Name
            </td>
            <td class="col-lg-2">
               $@item.Products.Price
            </td>
            <td class="col-lg-2">
                <input type="number" value="@item.Quantity" />
            </td>
            <td class="col-lg-3">
                <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-remove"</button>
            </td>
        </tr>
        }
   </tbody>
    



</table>
